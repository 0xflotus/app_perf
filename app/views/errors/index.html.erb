<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Errors
  </h1>
  <ol class="breadcrumb">
    <li class="active">Errors</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-lg-12 connectedSortable">
      <% if @errors.empty? %>
        <div class="alert alert-success">
          <h4>No errors!</h4>
          Congratulation! There are currently no errors!
        </div>
      <% else %>
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Errors</h3>
          </div>
          <div class="box-body">
            <table class="table">
              <tr>
                <th></th>
                <th>Error Message</th>
                <th>Latest</th>
                <th>Count</th>
              </tr>
              <% @errors.each do |error| %>
                <tr>
                  <td><%= link_to 'View Error', application_error_instances_path(@current_application, error) %></td>
                  <td>
                    <%= error.error_class %><br />
                    <%= error.error_message[0..100] %>
                  </td>
                  <td><%= error.last_error_at %></td>
                  <td><%= error.instances_count %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
