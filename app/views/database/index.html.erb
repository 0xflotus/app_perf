<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Database
  </h1>
  <ol class="breadcrumb">
    <li class="active">Database</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <%= paginate @database_calls %>
    </div>

    <div class="col-lg-12 connectedSortable">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Name</h3>
        </div>
        <div class="box-body">
          <table class="table">
            <tr>
              <th>Statement</th>
              <th class="text-center" width="200">Duration (ms)</th>
            </tr>
            <% @database_calls.each do |database_call| %>
              <tr>
                <td class="ellipsis"><%= database_call.statement %></td>
                <td class="text-center"><%= number_with_precision(database_call.duration, :precision => 2) %>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
