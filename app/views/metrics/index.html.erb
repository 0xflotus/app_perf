<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Metrics
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <% @metrics.in_groups_of(2, false) do |metrics| %>
    <div class="row">
      <% metrics.each do |metric| %>
        <section class="col-lg-6 connectedSortable">
          <div class="box">
            <div class="box-header">
              <i class="fa fa-clock"></i>
              <h3 class="box-title"><%= metric.name %></h3>
            </div>
            <div class="box-body">
              <div id="<%= metric.name %>-chart"
                   style="height: 300px;"
                   class="dynamic-chart"
                   data-legend="#<%= metric.name %>-legend"
                   data-url="<%= dynamic_report_url({}, { :controller => "reports", :action => "show", :application_id => @current_application, :id => "metrics", :name => metric.name }) %>"
                   data-unit="<%= metric.unit %>"
                   data-duration="15000"></div>
              <div id="<%= metric.name %>-legend" class="chart-legend"></div>
            </div>
          </div>
        </section>
      <% end %>
    </div>
  <% end %>
</section>
