/ Content Header (Page header)
%section.content-header
  %h1
    Dashboard
  %ol.breadcrumb
    %li.active Dashboard
%section.content
  .row
    %section.col-lg-12.connectedSortable
      .box
        .box-header
          %i.fa.fa-clock
          %h3.box-title Organizations
        .box-body
          %table.table.table-condensed
            - @organizations.each do |organization|
              %tr
                %td= link_to organization.name, organization_applications_path(organization)
